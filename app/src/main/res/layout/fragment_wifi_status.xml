<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    tools:context="com.boxshell.lesson.lxxz.wifi.WifiStatusFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        style="@style/Base.TextAppearance.AppCompat.Headline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="设备信息"
        android:gravity="center"/>

    <LinearLayout
        style="@style/WifiStatusStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="id编号:"
            android:gravity="right" />

        <TextView
            android:id="@+id/wifiStatusId"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/gray_text"
            tools:text="123456"
            android:paddingLeft="@dimen/wifi_text_padding"/>


    </LinearLayout>

    <LinearLayout
        style="@style/WifiStatusStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="IP地址:"
            android:gravity="right"

            />

        <TextView
            android:id="@+id/wifiStatusIp"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/gray_text"
            tools:text="102.0.1.2"
            android:paddingLeft="@dimen/wifi_text_padding"/>
    </LinearLayout>

    <LinearLayout
        style="@style/WifiStatusStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="MAC地址:"
            android:gravity="right"

            />

        <TextView
            android:id="@+id/wifiStatusMac"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/gray_text"
            tools:text="AA:AA:AA:AA:AA"
            android:paddingLeft="@dimen/wifi_text_padding"/>
    </LinearLayout>

    <LinearLayout
        style="@style/WifiStatusStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="设备角色:"
            android:gravity="right"

            />

        <TextView
            android:id="@+id/wifiStatusRole"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/gray_text"
            tools:text="AP"
            android:paddingLeft="@dimen/wifi_text_padding"/>
    </LinearLayout>

    <LinearLayout
        style="@style/WifiStatusStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            style="@style/Base.TextAppearance.AppCompat.Medium"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="软件版本:"
            android:gravity="right"

            />

        <TextView
            android:id="@+id/wifiStatusFwVer"
            style="@style/Base.TextAppearance.AppCompat.Large"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="@color/gray_text"
            tools:text="v0.2"
            android:paddingLeft="@dimen/wifi_text_padding"/>
    </LinearLayout>

</LinearLayout>
