<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context=".online.OnlineActivityFragment">
        <ProgressBar
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/progressBar"
            style="@style/Widget.AppCompat.ProgressBar.Horizontal"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardFirmware"
            android:elevation="2dp"
            android:foreground="?attr/selectableItemBackground"
            android:layout_marginBottom="@dimen/cardview_marginbottom">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_vertical_margin">

                <TextView
                    android:id="@+id/txtFirmwareHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="软件列表"
                    android:textSize="@dimen/header_size"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/txtFirmwareText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtFirmwareHeader"
                    android:text="可供使用的模块软件"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/txtFirmwareComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtFirmwareText"
                    android:paddingTop="10sp"
                    android:text="2016.2"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/comment_size" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>


        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/cardHelp"
            android:elevation="2dp"
            android:foreground="?attr/selectableItemBackground"
            android:layout_marginBottom="@dimen/cardview_marginbottom">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/activity_vertical_margin">
                <TextView
                    android:id="@+id/txtHelpHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="帮助"
                    android:textSize="@dimen/header_size"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/txtHelpText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtHelpHeader"
                    android:text="使用说明文件"
                    android:textSize="@dimen/text_size" />

                <TextView
                    android:id="@+id/txtHelpComment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/txtHelpText"
                    android:paddingTop="10sp"
                    android:text="2016.2"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/comment_size" />

            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <!--<ImageView
            android:layout_width="50dp"
